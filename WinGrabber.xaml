<Window x:Class="AdaptiveKeyboardConfig.WinGrabber"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStyle="None" Topmost="True"
        Margin="0" Padding="0" AllowsTransparency="True"
        Background="#80dd00ff" ShowInTaskbar="False"
        Title="WinGrabber" Height="100" Width="100"
        BorderThickness="2" BorderBrush="Red"
        Visibility="Hidden">
    <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center"
               FontFamily="Segoe UI Light" FontSize="36"
               Name="winTitle" Foreground="White"/>
</Window>
